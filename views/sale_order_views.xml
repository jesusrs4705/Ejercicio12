<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_notes" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.notes</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//notebook" position="after">
                <group string="Notes" name="notes_group">
                    <field name="notes" placeholder="Add your notes here..."/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>